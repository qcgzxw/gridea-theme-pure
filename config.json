    {
      "name": "bilibili",
      "label": "哔哩哔哩",
      "group": "社交",
      "value": "",
      "type": "input",
      "note": "链接地址"
    },
    {
      "name": "waline",
      "label": "是否开启Waline评论系统",
      "group": "Waline评论系统",
      "type": "switch",
      "value": false,
      "note": "启用Waline评论系统，需先关闭Gridea自带的评论系统开关。"
    },
    {
      "name": "vPercentWidth",
      "label": "自定义百分比宽度",
      "group": "Waline评论系统",
      "type": "input",
      "value": "100",
      "note": "评论区域百分比宽度。单位：%"

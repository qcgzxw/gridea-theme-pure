    {
      "name": "vMaxWidth",
      "label": "自定义最大宽度",
      "group": "Waline评论系统",
      "type": "input",
      "value": "1000",
      "note": "评论区域最大宽度。单位：px"
    },
    {
      "name": "vPadding",
      "label": "自定义Waline评论容器的padding",
      "group": "Waline评论系统",
      "type": "input",
      "value": "2.5%",
      "note": "评论区域padding。请自行填写单位(%，px等)。"
    },
    {
      "name": "serverURL",
      "label": "Vercel部署后的地址",
      "group": "Waline评论系统",
      "type": "input",
      "value": "",
      "note": "Vercel部署后的地址：your-domain.vercel.app"
    },
    {
      "name": "pageSize",
      "label": "每页展示的评论条数",
      "group": "Waline评论系统",
      "type": "input",
      "value": "5"
    },
    {
      "name": "recordIp",
      "label": "记录评论者IP",
      "group": "Waline评论系统",
      "type": "switch",
      "value": false,
      "note": "是否记录评论者IP"
